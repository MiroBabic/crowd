<div class="row">
<div class="col-md-3">
</div>
<div class="col-md-6">
<div class="panel panel-sea margin-bottom-40">
   <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-edit"></i> Kategórie</h3>
    </div>
  
    <table id="category" class="table table-striped table-bordered table-hover dataTable">
  <thead>
    <tr>
      <th>Názov</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Edituj', edit_category_path(category) %></td>
        <td><%= link_to 'Zmaž', category, method: :delete, data: { confirm: 'Skontroloval si, či k tejto kategórii nepatrí nejaký projekt?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'Vytvor novú kategóriu', new_category_path, :class=>"btn-u btn-block" %>
</div>
</div>

