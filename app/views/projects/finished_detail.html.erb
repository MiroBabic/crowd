<% if current_user.admin? %>

<div class="row">
  <div class="profile-bio">
                        <div class="row">
                            <div class="col-md-5">
                              
                                <% if @project.profile_pic.present? %>
                                <%= image_tag @project.profile_pic.url(:resized).to_s, :style=>"width:400px;height:253px;" %>
                                <% else %>
                                <img src="<%= asset_path( 'img_empty_800.jpg' ) %>" alt="", style="width:400px;height:253px;">
                                <% end %>
                            
                          </div>
                            <div class="col-md-7">
                                <h2><%= @project.name %></h2>
                                <span><strong>Cieľová suma:</strong> <%= @project.amount %></span>
                                <span><strong>Vyzbieraná suma:</strong> <%= collected(@project.id) %></span>
                                <p><strong>Počet prispievateľov:</strong> <%= payment_count(@project.id) %></p>
                                <span><strong>Status: </strong><span style="font-size:18px;color:red"><% if is_success(@project.id) %>ÚSPEŠNÝ<% else %>NEÚSPEŠNÝ<% end %></span></span>
                                <hr>
                                <p><%= @project.annotation %></p>
                                
                            </div>
                        </div>
                    </div><!--/end row-->
</div>
<div class="row">
<div class="panel panel-sea margin-bottom-40">
   <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-edit"></i> Detaily ukončeného projektu</h3>
    </div>
  
    <table id="finisheddetail" class="table table-striped table-bordered table-hover dataTable">
  <thead>
    <tr>
      <th>Podporovateľ</th>
      <th>Adresa</th>
      <th>Variabilný symbol</th>
      <th>Suma</th>
      <th>Odmena</th>
    </tr>
  </thead>

  <tbody>
    
    <% payments_detail(@project.id).each do |p| %>
      <tr>
        <td><%= p.user.email %></td>
        <td><%= p.user.street %>, <%= p.user.city %>, <%= p.user.zip %>, <%= p.user.country %> </td>
        <td><%= p.created_at.strftime("%Y") %><%= p.id %></td>
        <td><%= p.amount %></td>
        <td><% if p.reward.present? %><%= p.reward.name %><% else %>Bez odmeny<% end %></td>
        
      </tr>
    <% end %>
  </tbody>
  
</table>

</div>

<br>
</div>

  <% else %>
    <% controller.redirect_to root_path %>
  <% end %>