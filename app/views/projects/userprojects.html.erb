<div class="container content profile">
  <div class="row">
    <div class="col-md-3 md-margin-bottom-40">
      <% if @user.picture.url(:resized).present? %>
      <center><%= image_tag @user.picture.url(:resized).to_s %></center>
      <% else %>
      <center><img class="img-responsive profile-img margin-bottom-20" src="<%= asset_path( 'user-avatar.png' ) %>" alt=""></center>
      <% end %>
      </br></br>
              <ul class="list-group sidebar-nav-v1 margin-bottom-40" id="sidebar-nav-1">
                  
                    <%= link_to '<i class="fa fa-cog"></i> Nastavenia profilu'.html_safe, edit_user_registration_path, :class=>"list-group-item" %>
                    <%= link_to '<i class="fa fa-cubes"></i> Moje projekty'.html_safe, userprojects_path, :class=>"list-group-item" %>
                     <%= link_to '<i class="fa fa-cubes"></i> Moje príspevky'.html_safe, userpayments_path, :class=>"list-group-item" %>
                    
                    
              </ul>
    </div>
    <div class="col-md-9">
     <div class="profile-body">
       <% if @projects.empty? %>
        <p>Nemáš žiaden vytvorený projekt</p>
        <% else %>
      <% @projects.all.each_slice(2) do |slice_of_two| %>
        <div class="row">
          <% slice_of_two.each do |p| %>
          <div class="col-sm-6">
             <div class="easy-block-v1">
                    <% if p.pictures.present? %>
                        <%= image_tag p.pictures.first.url(:resized), :class=>"img-responsive" %>
                        <% else %>
                        <img src="<%= asset_path( 'img_empty.jpg' ) %>" alt="">
                        <% end %>
                    
                    <div class="easy-block-v1-badge rgba-red"><%= p.category.name %></div>
              </div>
            <div class="projects">
                                <h2><a class="color-dark" href="/projects/<%= p.id %>"><%= p.name %></a></h2>
                                <ul class="list-unstyled list-inline blog-info-v2">
                                    <li>By: <a class="color-green" href="#"><%= p.user.name %></a></li>
                                    <li><i class="fa fa-clock-o"></i> <%= p.created_at %></li>
                                </ul>
                                <p><%= p.annotation %>.</p>
                                <br>
                                <h3 class="heading-xs">Project Completeness <span class="pull-right">77%</span></h3>
                                <div class="progress progress-u progress-xxs">
                                    <div class="progress-bar progress-bar-u" role="progressbar" aria-valuenow="77" aria-valuemin="0" aria-valuemax="100" style="width: 77%">
                                    </div>
                                </div>
                                <ul class="list-inline blog-info-v2">
                                    <li>
                                        <strong>12%</strong>
                                        <span>Funded</span>
                                    </li>
                                    <li>
                                        <strong>17%</strong>
                                        <span>Pludged</span>
                                    </li>
                                    <li>
                                        <strong>25</strong>
                                        <span>days to go</span>
                                    </li>
                                </ul>
                            </div> 
                        </div>
            <% end %>
          </div>
       <%end %>
       <%end %>
     </div>

    </div>
  </div>
</div>