<div class="row" >
  <center><h1> Založ nový projekt </h1></center>
<%= form_for(@project, html: {:class => "sky-form"}, validate: true) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-12" style="height:150px;">
     </div>
  <div class="col-md-3" >
  </div>
  <div class="col-md-6" style="height:450px;">
  <label class="input">
              <%= f.text_field :name, :placeholder=>'Názov projektu',:required => true %>
              <b class="tooltip tooltip-bottom-right">Vymysli meno, ktoré zarezonuje a pritiahne pozornosť na tvoj projekt </b>
        </label>
    <label class="select">
  <%= f.select :category_id, Category.all.collect { |p| [ p.name, p.id ] }, {include_blank: 'Vyber kategóriu'},{:class => 'form-control m-b', :required => true} %>
      </label>

      <label class="input">
              <i class="icon-append fa fa-eur"></i>
              <%= f.number_field :amount, :placeholder=>"Cieľová suma",:required => true %>
              <b class="tooltip tooltip-bottom-right">Zvoľ cieľovú sumu </b>
       </label>

       <label class="label">Ako dlho má bežať kampaň?</label>
              <label class="toggle"><%= f.radio_button :duration, "10", :type=>'radio', :checked => 'checked' %><i class="no-rounded"></i> 10 dní</label>
              <label class="toggle"><%= f.radio_button :duration, "30", :type=>'radio'  %><i class="no-rounded"></i> 30 dní</label>
              <label class="toggle"><%= f.radio_button :duration, "60", :type=>'radio' %><i class="no-rounded"></i> 60 dní</label>

<div class="control-group">
 <div class="actions">
    <center><%= f.submit "Pokračuj", :class=> 'btn-u' %></center>
  </div>
<% end %>
</div>
</div>

</div>





