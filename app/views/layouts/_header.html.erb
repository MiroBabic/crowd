<!--=== Header ===-->
<div class="header" >
    <!-- Topbar -->
    <div class="container">

       
            <a class="logo" href="/">
                <img src="<%= asset_path( 'logo.png' ) %>" alt="Logo" height="75">
            </a>
        
        <div class="topbar" >
           <ul class="loginbar pull-right">

                    <li class="hoverSelector">
                        <i class="fa fa-globe"></i>
                        <a>Jazyky/Languages</a>
                        <ul class="languages hoverSelectorBlock">
                            <li class="active">
                                <a href="#">Slovenský <i class="fa fa-check"></i></a>
                            </li>
                            <li><a href="#">English</a></li>
                            <li ><a href="#">Český</a></li>
                            <li><a href="#">Poľský</a></li>
                            <li><a href="#">Magyar</a></li>
                        </ul>
                    </li>
                    <li class="topbar-devider"></li>
                    <% if user_signed_in? %>
                    <li class="hoverSelector">
                        <a>
                            Profil
                        </a>
                    <ul class="languages hoverSelectorBlock">
                    <%= content_tag(:li, link_to(current_user.email, edit_user_registration_path)) %>
                    <%= content_tag(:li, link_to('Logout', destroy_user_session_path, method: :delete)) %>
                    
                    </ul>
                    </li>
                    <% else %>
                    <li class="cd-log_reg"><a class="cd-signin" href="#">Login</a></li>
                    <% end %>
                </ul>
    </div>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="fa fa-bars"></span>
            </button>
    </div>
    
    <!--  End Topbar -->

    <!-- Navbar -->

    <div class="collapse navbar-collapse mega-menu navbar-responsive-collapse" >
    <!--<div class="collapse navbar-collapse mega-menu navbar-responsive-collapse">-->
    <!--<div class="navbar navbar-default mega-menu" role="navigation">-->
       <div class="container" style="margin-top: -30px">

                <ul class="nav navbar-nav" >
                   <%= content_tag(:li, link_to('Úvod', root_path, {:style => 'color: #2F3236; text-decoration:none !important;'})) %>
                    <!-- Home -->
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">
                            Projekty
                        </a>
                        <ul class="dropdown-menu">
                            <%= content_tag(:li, link_to('Založiť nový projekt', project_terms_url)) %>
                            <%= content_tag(:li, link_to('Úspešne ukončené kampane', success_url)) %>
                            <!-- One Page -->
                                                       
                            
                        </ul>
                    </li>
                    <%= content_tag(:li, link_to('Najčastejšie otázky', faq_path)) %>
                    <%= content_tag(:li, link_to('O nás', about_url)) %>
                    <% if user_signed_in? && current_user.admin? %>
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">
                            Administrácia
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/adminpage">Projekty</a></li>
                            <li><a href="/categories">Kategórie</a></li>
                            <li><a href="/payments">Platby</a></li>
                            <li><a href="index.html">Úspešne ukončené kampane</a></li>
                        </ul>
                    </li>
                   
                    <% end %>
                    <!-- Search Block -->
                    <li>
                        <i class="search fa fa-search search-btn" style="background: #2F3236; color: #fff;" ></i>
                        <div class="search-open" style=" z-index:9999">
                            <div class="input-group animated fadeInDown">
                                <input type="text" class="form-control" placeholder="Hľadaj">
                                <span class="input-group-btn">
                                    <button class="btn-u" type="button"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                    </li>
                    <!-- End Search Block -->
                </ul>
          </div>
    </div>

    
    <!-- End Navbar -->
</div>
<!--=== End Header ===-->
