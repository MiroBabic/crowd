        </label>
    </section>
    </dd>
  <dt>O mne </dt>
    <dd>
     <section>
        <label class="input">
        <i class="icon-append fa fa-user-plus"></i>
        <%= f.text_field :aboutme, :placeholder=>'O mne', :value=> current_user.bio.aboutme %>
        <b class="tooltip tooltip-bottom-right">O mne </b>
        </label>
    </section>
    </dd>
  
 </br>
 
  <div class="actions">
    <%= f.submit "Ulož zmeny", :class=> 'btn-u' %>
  </div>
<% end %>
