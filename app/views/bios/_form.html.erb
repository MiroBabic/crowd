<%= form_for(@bio, html: {:class => "sky-form", method: :put }) do |f| %>
  <% if @bio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bio.errors.count, "error") %> prohibited this bio from being saved:</h2>

      <ul>
      <% @bio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="field">
    <%= f.label :picture %><br>
    <%= f.text_field :picture %>
  </div>
<dt>Meno </dt>
    <dd>
     <section>
        <label class="input">
        <i class="icon-append fa fa-envelope"></i>
        <%= f.text_field :name, :placeholder=>'Meno užívateľa', :value=> current_user.bio.name %>
        <b class="tooltip tooltip-bottom-right">Toto meno bude použité v prípade zaslania odmeny </b>
        </label>
    </section>
    </dd>
<dt>Ulica </dt>
    <dd>
     <section>
        <label class="input">
        <i class="icon-append fa fa-home"></i>
        <%= f.text_field :street, :placeholder=>'Ulica', :value=> current_user.bio.street %>
        <b class="tooltip tooltip-bottom-right">Na túto adresu bude zaslaná prípadná odmena </b>
        </label>
    </section>
    </dd>
<dt>Mesto </dt>
    <dd>
     <section>
        <label class="input">
        <i class="icon-append fa fa-map"></i>
        <%= f.text_field :city, :placeholder=>'Mesto', :value=> current_user.bio.city %>
        <b class="tooltip tooltip-bottom-right">Na túto adresu bude zaslaná prípadná odmena </b>
        </label>
    </section>
    </dd>
  <dt>PSČ </dt>
    <dd>
     <section>
        <label class="input">
        <i class="icon-append fa fa-map"></i>
        <%= f.number_field :zip, :placeholder=>'PSČ', :value=> current_user.bio.zip %>
