        <b class="tooltip tooltip-bottom-right">Facebook profil </b>
        </label>
    </section>
    </dd>
  <dt>Google+ Profil </dt>
    <dd>
     <section>
        <label class="input">
        <i class="icon-append fa fa-google-plus"></i>
        <%= f.text_field :gplusprofile, :placeholder=>'Google+ profil', :value=> current_user.bio.gplusprofile %>
        <b class="tooltip tooltip-bottom-right">Google+ profil </b>
        </label>
    </section>
    </dd>
  <dt>Twitter Profil </dt>
    <dd>
     <section>
        <label class="input">
        <i class="icon-append fa fa-twitter"></i>
        <%= f.text_field :twitterprofile, :placeholder=>'Twitter profil', :value=> current_user.bio.twitterprofile %>
        <b class="tooltip tooltip-bottom-right">Twitter profil </b>
        </label>
    </section>
    </dd>
  <dt>Môj web </dt>
