<div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" >

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => "reg-page" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

   <div class="input-group margin-bottom-20">
    <%= f.label :password, "Nové heslo" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> znakov minimálne)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", :class=>'form-control' %>
  </div>

  <div class="input-group margin-bottom-20">
    <%= f.label :password_confirmation, "Potvrď nové heslo" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>'form-control' %>
  </div>

 <div class="col-md-6" >
    <%= f.submit "Zmeň heslo",:class=> 'btn-u' %>
  </div>
<% end %>

  </div>
    </div>