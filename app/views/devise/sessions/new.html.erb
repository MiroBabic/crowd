 
      <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class=>'reg-page') do |f| %>
                    <div class="reg-header">
                        <h2>Prihlás sa</h2>
                    </div>

                    <div class="input-group margin-bottom-20">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <%= f.email_field :email, autofocus: true, :class=>'form-control', :placeholder=>'Prihlasovací email' %>
                        </div>
                    <div class="input-group margin-bottom-20">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <%= f.password_field :password, autocomplete: "off",:class=>'form-control', :placeholder=>'Heslo' %>
                    </div>

                    <div class="row">
                        <div class="col-md-6 checkbox">
                         <%= f.check_box :remember_me, :class => "checkbox-inline" %> <%= f.label  "Ostať prihlásený" %> 
                            <!--<label><input type="checkbox"> </label>-->
                        </div>
                        <div class="col-md-6">
                          <%= f.submit "Prihlás sa", :class=> 'btn-u pull-right' %>
                           <!-- <button class="btn-u pull-right" type="submit">Login</button>-->
                        </div>
                    </div>

                    <hr>

                    <h4>Zabudol si heslo ?</h4>
                    <p>nevadí, <%= link_to "klikni sem", new_password_path(resource_name), class: 'color-green' %> na reset hesla.</p>
                    <!--<p>nevadí, <a class="color-green" href="#">klikni sem</a> na reset hesla.</p>-->
                <% end %>
            </div>
        </div><!--/row-->
    

