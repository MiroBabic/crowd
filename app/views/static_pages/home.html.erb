<div class="col-md-12">
  <div class="row">
	<h2>Najnovšie projekty </h2>
     <div class="profile-body">
      <!-- first -->
      <% get4new.each do |p| %>
     	<div class="col-sm-3">
        <div class="projectborder">

     		<div class="easy-block-v1">
                    	 <% if p.pictures.present? %>
                        <%= image_tag p.pictures.first.url(:resized), :class=>"img-responsive", :height=>"120" %>
                        <% else %>
                        <img src="<%= asset_path( 'img_empty.jpg' ) %>" alt="">
                        <% end %>
                        
                        
                    
                    <div class="easy-block-v1-badge rgba-green"><%= p.category.name %></div>
              </div>
     	<div class="projects">    <div id="header" style="height:70px;">
                                <h4><strong><a class="color-dark" href="/showproject/<%= p.id %>"><%= p.name %></a></strong></h4>
                              </div>
                                <ul class="list-unstyled list-inline blog-info-v2">
                                    <li>Autor: <a class="color-green" href="#"><%= p.user.name %></a></li><br>
                                    <li><i class="fa fa-clock-o"></i> <%= p.enddate %></li>
                                </ul>
                                <annotation>
                                <div style="width:100%;min-height:70px;overflow:hidden;">
                                <p><%= p.annotation %></p>
                                </div>
                                </annotation>
                                <% if p.annotation.length < 90 %>
                                <div style="height:11px"></div>
                                <% end %>
                                <br>
                                <h5 class="heading-xs">Projekt zatiaľ vyzbieral <span class="pull-right"><%= projectCollectedMoneyPerc(p.id) %>%</span></h5>
                                <div class="progress progress-u progress-xxs">
                                    <div class="progress-bar progress-bar-u-yellow" role="progressbar" aria-valuenow="<%= projectCollectedMoneyPerc(p.id) %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= projectCollectedMoneyPerc(p.id) %>%">
                                    </div>
                                </div>
                               
                                <ul class="list-inline blog-info-v2">
                                    <li>
                                        <span>Zatiaľ vyzbieraných</span>
                                        <strong><%= projectCollectedMoney(p.id) %> <i class="fa fa-eur"></i></strong>
                                        
                                    </li>
                                    <li>
                                        <span>Cieľová suma</span>
                                        <strong><%= p.amount %> <i class="fa fa-eur"></i></strong>
                                        
                                    </li>
                                    <li>
                                        <span>Ostáva do konca</span>
                                        <strong><%= TotalToEnd(p.id) %> </strong>
                                        
                                    </li>
                                </ul>
                            </div> 
            </div>
          </div>
          <% end %>  
    </div>
  </div>
</div>
<hr class="devider devider-dotted"></hr>
